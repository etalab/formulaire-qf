<%= render partial: "show_banner", locals: { duration: 2 } %>

<div class="fr-col-md-8">
  <%= simple_format t('pages.collectivities.show.title'), { }, wrapper_tag: 'h2' %>

  <p><%= t('pages.collectivities.show.info.explanation') %></p>

  <div class="fr-grid-row fr-grid-row--center">
    <div class="fr-connect-group">
      <%= form_tag('/auth/france_connect', method: 'post', data: {turbo: false}) do %>
        <button type='submit' class="fr-connect">
          <span class="fr-connect__login">S’identifier avec</span>
          <span class="fr-connect__brand">FranceConnect</span>
        </button>
      <% end %>

      <p>
        <a href="https://franceconnect.gouv.fr/" target="_blank"  rel="noopener" title="Qu’est-ce que FranceConnect ? - nouvelle fenêtre">
          Qu’est-ce que FranceConnect ?
        </a>
      </p>
    </div>
  </div>

  <div class="fr-grid-row fr-grid-row--center fr-mb-2w">
    <div class="horizontal-line"></div>
    <div class="fr-mx-4w">Ou</div>
    <div class="horizontal-line"></div>
  </div>

  <div class="fr-mb-6w">
    <div class="fr-grid-row fr-grid-row--center">
      <%= t('pages.collectivities.show.no_france_connect.text') %>
    </div>

    <div class="fr-grid-row fr-grid-row--center">
      <%= link_to t('pages.collectivities.show.no_france_connect.link'), "#", class: "fr-link fr-icon-arrow-right-line fr-link--icon-right" %>
    </div>
  </div>

  <div class="fr-alert fr-alert--info">
    <h3 class="fr-alert__title"><%= t('pages.collectivities.show.info.title') %></h3>
    <p><%= t('pages.collectivities.show.info.content') %></p>    
    <p>
      <a class="fr-link--sm" href='/faq#donnees-personnelles'>
        <%= t('pages.collectivities.show.info.link')%>
      </a>
    </p>
  </div>
</div>
