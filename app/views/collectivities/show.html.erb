<%= render partial: "show_banner", locals: { duration: 2 } %>

<div class="fr-col-md-8">
  <%= simple_format t('pages.collectivities.show.title'), { }, wrapper_tag: 'h2' %>

  <div class="fr-grid-row fr-grid-row--center fr-mb-6v">
    <p><%= t('pages.collectivities.show.info.explanation') %></p>
    <div class="fr-connect-group">
      <%= form_tag('/auth/france_connect', method: 'post', data: {turbo: false}) do %>
        <button type='submit' class="fr-connect">
          <span class="fr-connect__login">S’identifier avec</span>
          <span class="fr-connect__brand">FranceConnect</span>
        </button>
      <% end %>

      <p>
      <a href="https://franceconnect.gouv.fr/" target="_blank"  rel="noopener" title="Qu’est-ce que FranceConnect ? - nouvelle fenêtre">
        Qu’est-ce que FranceConnect ?
      </a>
      </p>
    </div>
  </div>
  <div class="fr-alert fr-alert--info">
    <h3 class="fr-alert__title"><%= t('pages.collectivities.show.info.title') %></h3>
    <p><%= t('pages.collectivities.show.info.content') %></p>
    <p>
    <a class="fr-link--sm" href='/faq#donnees-personnelles'>
      <%= t('pages.collectivities.show.info.link')%>
    </a>
  </p>
  </div>
</div>

<% content_for :secondary_information do %>
  <div class="fr-py-4w fr-mt-6w fr-background-alt--grey">
    <div class="fr-container">
      <div class="fr-grid-row">
        <div class="fr-col-md-8">
          <h3 class="fr-text-title--grey"><%= t("pages.collectivities.show.secondary_info.title") %></h3>
          <p class="fr-text--lg"><%= t("pages.collectivities.show.secondary_info.explanation", collectivity_name: @collectivity.name) %></p>

          <div class="fr-grid-row">
            <div class="fr-col-md-4 fr-col-12 fr-pr-md-2w">
              <%= image_tag "data:image/png;base64,#{@qr_code}", alt: "QR code", class: "fr-responsive-img" %>
            </div>

            <div class="fr-col-md-8 fr-col-12">
              <div class="fr-card fr-enlarge-link fr-card--download download-qr">
                <div class="fr-card__body">
                  <div class="fr-card__content">
                    <h3 class="fr-card__title">
                      <a href="data:image/png;base64,<%=@qr_code%>" id="download-btn" download="QRCode_<%=@collectivity.siret%>.jpg">
                        <%= t("pages.collectivities.show.secondary_info.download") %>
                      </a>
                    </h3>

                    <div class="fr-card__end">
                      <p class="fr-card__detail">JPG – 480 x 480px</p>
                    </div>
                  </div>
                </div>
              </div>

              <div class="fr-my-2w">
                <div class="fr-mb-1w">
                  <strong><%= t("pages.collectivities.show.secondary_info.link_title") %></strong> 
                </div>
                <%= link_to collectivity_url(@collectivity.siret), collectivity_url(@collectivity.siret) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
