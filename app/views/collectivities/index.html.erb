<% content_for :banner_title do %>
  <%= simple_format t('pages.home.banner.text'), { }, wrapper_tag: 'span' %>
<% end %>

<% content_for :banner_right do %>
  <p class="fr-tag fr-tag--icon-left fr-icon-timer-fill">
    <%= t('shared.duration_text', duration: 3)%>
  </p>
<% end %>

<h2><%= t('pages.collectivities.index.title') %></h2>

<%= form_with url: select_collectivities_path, method: :get, class: "fr-col-md-8" do |form| %>
  <div class="fr-select-group">
    
    <%= form.label :id, class: "fr-label" do %>
      <%= t('pages.collectivities.index.form.label') %>

      <span class="fr-hint-text">
        <%= t('pages.collectivities.index.form.hint') %>
      </span>
    <% end %>

    <%= form.select :id, options_from_collection_for_select(@collectivities, :siret, :name), {}, class: "fr-select" %>

    <div class="fr-notice fr-notice--info fr-mt-2w">
      <div class="fr-container">
        <div class="fr-notice__body">
          <p class="fr-notice__title">
            <%= t('pages.collectivities.index.form.notice.text')%>
            <!--<a href='#' rel='noopener external' title="intitulé - nouvelle fenêtre" target='_blank'>
              <%= t('pages.collectivities.index.form.notice.link')%>
            </a>-->
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="fr-grid-row fr-grid-row--right">
    <%= button_tag type: "submit", class: "fr-btn fr-btn--lg fr-btn--icon-right fr-fi-arrow-right-line" do %>
      <%= t('shared.next_button') %>
    <% end %>
  </div>
<% end %>
